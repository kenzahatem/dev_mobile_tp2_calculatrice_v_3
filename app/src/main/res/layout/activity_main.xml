<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/view_vertical_margin"
        android:orientation="horizontal"
        >

        <EditText
            android:id="@+id/et_op1"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:hint="@string/op_1"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:typeface="monospace"
            android:textSize="18sp"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginRight="@dimen/view_horizontal_margin"
            android:layout_marginLeft="@dimen/view_horizontal_margin"
 />


        <EditText
            android:id="@+id/et_op2"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:hint="@string/op_2"
            android:layout_weight="0.5"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/colorAccent"
            android:typeface="monospace"
            android:textSize="18sp"
            android:inputType="numberDecimal|numberSigned"
            android:layout_marginRight="@dimen/view_horizontal_margin"
 />
    </LinearLayout>

    <EditText
        android:id="@+id/et_oper"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:hint="@string/operateur"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_marginTop="@dimen/view_vertical_margin"
        />


    <Button
        android:id="@+id/bt_calculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/view_padding"
        android:text="@string/calculer"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorAccent"
        android:typeface="monospace"
        android:textSize="20sp"
        android:inputType="text"
        android:layout_marginTop="@dimen/view_vertical_margin"
        />

    <TextView
        android:id="@+id/tv_resultat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/resultat"
        android:gravity="top"
        android:layout_gravity="center"
        android:background="@android:color/background_dark"
        android:textColor="@android:color/holo_blue_bright"
        android:typeface="monospace"
        android:textSize="14dp"
        android:layout_marginTop="@dimen/view_vertical_margin"
        />

</LinearLayout>
